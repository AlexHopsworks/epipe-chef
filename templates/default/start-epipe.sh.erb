#!/bin/bash

export LD_LIBRARY_PATH="<%= node.mysql.dir %>/mysql/lib:${LD_LIBRARY_PATH}"

PID_FILE=/tmp/epipe.pid
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill -0 $PID 2>&1 > /dev/null
 if [ $? -eq 0 ] ; then
     echo "A Epipe server is already running. Kill it first."
     exit 1
 fi
fi


nohup <%= node.epipe.home %>/bin/epipe  2>&1 > <%= node.epipe.home %>/epipe.log &
echo $! > /tmp/epipe.pid
